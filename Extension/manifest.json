{
  "manifest_version": 3,
  "name": "Universal Search Parameter Injector",
  "version": "1.5",
  "description": "Injects URL parameters into page elements. Build URL sequences via popup. Runs on allowlisted sites only.",
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}