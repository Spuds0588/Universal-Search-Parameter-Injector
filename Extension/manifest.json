{
  "manifest_version": 3,
  "name": "Universal Search Parameter Injector",
  "version": "1.2", // Increment version
  "description": "Injects URL parameter values into specified element IDs/selectors on user-approved pages. Use right-click to build URL.",
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "contextMenus",     // <-- Add permission for right-click menus
    "clipboardWrite",   // <-- Add permission to write to clipboard
    "notifications"     // <-- Add permission for user feedback
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}